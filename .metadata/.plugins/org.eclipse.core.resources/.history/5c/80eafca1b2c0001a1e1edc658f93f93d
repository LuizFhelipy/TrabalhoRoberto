		candidato.setNome_candidato("José");
		candidato.setCurriculo("Trabalhou tal tal tal");
		candidato.setEndereco("Rua pororo");
		vaga.setId_vaga(2);
		candidato.setVaga(vaga);
		candidatodao.updateCandidato(candidato);
	}
